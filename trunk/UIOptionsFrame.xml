                <OnMouseUp function="Model_OnMouseUp" />
                <OnMouseWheel function="Model_OnMouseWheel" />
            </Scripts>
        </PlayerModel>
-->
    </Frames>

    <Scripts>
        <OnLoad function="LiteMountOptions_OnLoad" />
        <OnShow function="LiteMountOptions_OnShow" />
        <OnSizeChanged function="LiteMountOptions_OnSizeChanged" />
    </Scripts>

</Frame>

</Ui>
