<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">

<Button name="LiteMountOptionsButtonTemplate" virtual="true">

    <Size x="180" y="45" />

    <Backdrop edgefile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
        <EdgeSize val="8" />
    </Backdrop>

    <Scripts>
        <OnLoad>
            self:SetBackdropBorderColor(0.6, 0.6, 0.6, 1)
        </OnLoad>
    </Scripts>

    <Frames>
        <CheckButton name="$parentCheck" inherits="OptionsCheckButtonTemplate" parentKey="check">
            <Size x="24" y="24" />
            <Anchors>
                <Anchor point="LEFT" x="2" />
            </Anchors>
        </CheckButton>
    </Frames>

    <Layers>
        <Layer level="ARTWORK">
            <Texture name="$parentIcon" parentKey="icon">
                <Size x="36" y="36" />
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentCheck" relativePoint="RIGHT" x="2" />
                </Anchors>
            </Texture>
            <FontString name="$parentName" inherits="GameFontNormal" justifyH="LEFT" parentKey="name">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentIcon" relativePoint="RIGHT" x="2" />
                    <Anchor point="TOP" y="-2" />
                    <Anchor point="BOTTOMRIGHT" x="-2" y="2" />
                </Anchors>
            </FontString>A
        </Layer>
    </Layers>

</Button>

<Frame name="LiteMountOptions">
    <Layers>
        <Layer level="ARTWORK">
            <Fontstring inherits="GameFontNormalLarge" parentKey="title">
                <Anchors>
                    <Anchor point="TOPLEFT" x="16" y="-16" />
                </Anchors>
            </Fontstring>
            <FontString inherits="GameFontNormal" text="Options panel is a work in progress and doesn't do anything yet.">
                <Anchors><Anchor point="CENTER" /></Anchors>
            </FontString>
        </Layer>
    </Layers>

    <Frames>
        <Frame name="$parentContainer" inherits="OptionsFrameListTemplate" parentKey="container">
            <Anchors>
                <Anchor point="TOPLEFT" x="16" y="-72" />
                <Anchor point="BOTTOMRIGHT" x="-16" y="48" />
            </Anchors>
        </Frame>

        <Button name="$parentTab1" inherits="OptionsFrameTabButtonTemplate" text="Ground Mounts" id="1">
            <Anchors>
                <Anchor POINT="BOTTOMLEFT" relativeTo="$parentContainer" relativePoint="TOPLEFT" x="6" y="-3" />
            </Anchors>
            <Scripts>
                <OnClick>
                    PanelTemplates_SetTab(self:GetParent(), self:GetID())
                </OnClick>
            </Scripts>
        </Button>

        <Button name="$parentTab2" inherits="OptionsFrameTabButtonTemplate" text="Flying Mounts" id="2">
            <Anchors>
                <Anchor POINT="TOPLEFT" relativeTo="$parentTab1" relativePoint="TOPRIGHT" x="-16" />
            </Anchors>
            <Scripts>
                <OnClick>
                    PanelTemplates_SetTab(self:GetParent(), self:GetID())
                </OnClick>
            </Scripts>
        </Button>

        <Button name="$parentTab3" inherits="OptionsFrameTabButtonTemplate" text="Swimming Mounts" id="3">
            <Anchors>
                <Anchor POINT="TOPLEFT" relativeTo="$parentTab2" relativePoint="TOPRIGHT" x="-16" />
            </Anchors>
            <Scripts>
                <OnClick>
                    PanelTemplates_SetTab(self:GetParent(), self:GetID())
                </OnClick>
            </Scripts>
        </Button>

