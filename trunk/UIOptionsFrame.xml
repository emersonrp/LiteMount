<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">

<CheckButton name="LiteMountOptionsBitButtonTemplate" inherits="OptionsBaseCheckButtonTemplate">
    <Size x="24" y="24" />
</CheckButton>

<Button name="LiteMountOptionsButtonTemplate" virtual="true">

    <Size x="180" y="45" />

    <Backdrop edgefile="Interface\Tooltips\UI-Tooltip-Border" bgfile="Interface\Tooltips\UI-Tooltip-Background" tile="true">
        <EdgeSize val="8" />
        <TileSize val="8" />
        <BackgroundInsets>
            <AbsInset left="1" right="1" top="1" bottom="1" />
        </BackgroundInsets>
    </Backdrop>

    <Scripts>
        <OnLoad>
            self:SetBackdropBorderColor(0.3, 0.3, 0.3, 0.3)
            self:SetBackdropColor(0.3, 0.3, 0.3, 0.3)
        </OnLoad>
    </Scripts>

    <Frames>
        <CheckButton name="$parentCheck" inherits="OptionsBaseCheckButtonTemplate" parentKey="check">
            <Size x="32" y="32" />
            <Anchors>
                <Anchor point="LEFT" x="2" />
            </Anchors>
        </CheckButton>
    </Frames>

    <Layers>
        <Layer level="OVERLAY">
            <Texture name="$parentIcon" parentKey="icon">
                <Size x="36" y="36" />
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentCheck" relativePoint="RIGHT" x="2" />
                </Anchors>
            </Texture>
            <FontString name="$parentName" inherits="GameFontNormal" justifyH="LEFT" parentKey="name">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentIcon" relativePoint="RIGHT" x="4" />
                    <Anchor point="TOP" y="-2" />
                    <Anchor point="BOTTOMRIGHT" x="-2" y="2" />
                </Anchors>
            </FontString>
        </Layer>
    </Layers>

    <Frames>
        <CheckButton name="$parentBit1" inherits="LiteMountOptionsBitButtonTemplate" parentKey="bit1">
            <Anchors> <Anchor point="RIGHT" x="-2" /> </Anchors>
        </CheckButton>
        <CheckButton name="$parentBit2" inherits="LiteMountOptionsBitButtonTemplate" parentKey="bit2">
            <Anchors> <Anchor point="RIGHT" relativeTo="$parentBit1" relativePoint="LEFT" x="-4" /> </Anchors>
        </CheckButton>
        <CheckButton name="$parentBit3" inherits="LiteMountOptionsBitButtonTemplate" parentKey="bit3">
            <Anchors> <Anchor point="RIGHT" relativeTo="$parentBit2" relativePoint="LEFT" x="-4" /> </Anchors>
        </CheckButton>
        <CheckButton name="$parentBit4" inherits="LiteMountOptionsBitButtonTemplate" parentKey="bit4">
            <Anchors> <Anchor point="RIGHT" relativeTo="$parentBit3" relativePoint="LEFT" x="-4" /> </Anchors>
        </CheckButton>
        <CheckButton name="$parentBit5" inherits="LiteMountOptionsBitButtonTemplate" parentKey="bit5">
            <Anchors> <Anchor point="RIGHT" relativeTo="$parentBit4" relativePoint="LEFT" x="-4" /> </Anchors>
        </CheckButton>
    </Frames>

</Button>

<Frame name="LiteMountOptions">
    <Size x="622" y="567" />

    <Layers>
        <Layer level="ARTWORK">
            <Fontstring inherits="GameFontNormalLarge" parentKey="title">
                <Anchors>
                    <Anchor point="TOPLEFT" x="16" y="-16" />
                </Anchors>
            </Fontstring>
<!--
            <FontString inherits="GameFontNormal" text="Options panel is a work in progress and doesn't do anything yet.">
                <Anchors><Anchor point="CENTER" /></Anchors>
            </FontString>
-->
        </Layer>
    </Layers>

    <Frames>
        <ScrollFrame name="$parentScrollFrame" inherits="MinimalHybridScrollFrameTemplate" parentKey="scrollFrame">
            <Anchors>
                <Anchor point="TOPLEFT" x="16" y="-72" />
                <Anchor point="BOTTOMRIGHT" x="-32" y="48" />
            </Anchors>
            <Scripts>
                <OnLoad>
                    local track = _G[self.ScrollBar:GetName().."Track"]
                    track:Hide()
                </OnLoad>
            </Scripts>
        </ScrollFrame>

<!--
        <PlayerModel name="LiteMountOptionsModel">
            <Anchors>
                <Anchor point="TOP" y="-16" />
            </Anchors>
            <Size x="320" y="240" />
            <Scripts>
                <OnLoad function="Model_OnLoad" />
