    </Frames>

    <Scripts>
        <OnLoad>
            PanelTemplates_SetNumTabs(self, 3)
            PanelTemplates_SetTab(self, 1)
            LiteMountOptions_OnLoad(self)
        </OnLoad>
    </Scripts>

</Frame>

</Ui>
