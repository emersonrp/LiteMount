<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">

<Button name="LiteMountOptionsButtonTemplate" virtual="true">

    <Size x="180" y="45" />

    <Backdrop edgefile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
        <EdgeSize val="8" />
    </Backdrop>

    <Scripts>
        <OnLoad>
            self:SetBackdropBorderColor(0.6, 0.6, 0.6, 1)
        </OnLoad>
    </Scripts>

    <Frames>
        <CheckButton name="$parentCheck" inherits="OptionsCheckButtonTemplate" parentKey="check">
            <Size x="24" y="24" />
            <Anchors>
                <Anchor point="LEFT" x="2" />
            </Anchors>
        </CheckButton>
    </Frames>

    <Layers>
        <Layer level="OVERLAY">
            <Texture name="$parentIcon" parentKey="icon">
                <Size x="36" y="36" />
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentCheck" relativePoint="RIGHT" x="2" />
                </Anchors>
            </Texture>
            <FontString name="$parentName" inherits="GameFontNormal" justifyH="LEFT" parentKey="name">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentIcon" relativePoint="RIGHT" x="2" />
                    <Anchor point="TOP" y="-2" />
                    <Anchor point="BOTTOMRIGHT" x="-2" y="2" />
                </Anchors>
            </FontString>
        </Layer>
    </Layers>

    <Frames>
        <CheckButton name="$parentBit1" inherits="OptionsCheckButtonTemplate" parentKey="bit1">
            <Size x="16" y="16" />
            <Anchors> <Anchor point="RIGHT" x="-2" /> </Anchors>
        </CheckButton>
        <CheckButton name="$parentBit2" inherits="OptionsCheckButtonTemplate" parentKey="bit2">
            <Size x="16" y="16" />
            <Anchors> <Anchor point="RIGHT" relativeTo="$parentBit1" relativePoint="LEFT" x="-4" /> </Anchors>
        </CheckButton>
        <CheckButton name="$parentBit3" inherits="OptionsCheckButtonTemplate" parentKey="bit3">
            <Size x="16" y="16" />
            <Anchors> <Anchor point="RIGHT" relativeTo="$parentBit2" relativePoint="LEFT" x="-4" /> </Anchors>
        </CheckButton>
        <CheckButton name="$parentBit4" inherits="OptionsCheckButtonTemplate" parentKey="bit4">
            <Size x="16" y="16" />
            <Anchors> <Anchor point="RIGHT" relativeTo="$parentBit3" relativePoint="LEFT" x="-4" /> </Anchors>
        </CheckButton>
        <CheckButton name="$parentBit5" inherits="OptionsCheckButtonTemplate" parentKey="bit5">
            <Size x="16" y="16" />
            <Anchors> <Anchor point="RIGHT" relativeTo="$parentBit4" relativePoint="LEFT" x="-4" /> </Anchors>
        </CheckButton>
    </Frames>

</Button>

<Frame name="LiteMountOptions">
    <Layers>
        <Layer level="ARTWORK">
            <Fontstring inherits="GameFontNormalLarge" parentKey="title">
                <Anchors>
                    <Anchor point="TOPLEFT" x="16" y="-16" />
                </Anchors>
            </Fontstring>
            <FontString inherits="GameFontNormal" text="Options panel is a work in progress and doesn't do anything yet.">
                <Anchors><Anchor point="CENTER" /></Anchors>
            </FontString>
        </Layer>
    </Layers>

    <Frames>
        <Frame name="$parentScrollFrame" inherits="HybridScrollFrameTemplate" parentKey="scrollFrame">
            <Anchors>
                <Anchor point="TOPLEFT" x="16" y="-72" />
                <Anchor point="BOTTOMRIGHT" x="-16" y="48" />
            </Anchors>
            <Frames>
                <Slider name="$parentScrolLBar" inherits="HybridScrollBarTemplate">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="0" y="-12" />
                        <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" x="0" y="13" />
                    </Anchors>
                </Slider>
            </Frames>
        </Frame>

